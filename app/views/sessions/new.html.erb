<%= form_tag sessions_path, :role => "form" do %>
  <div class="login-box">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">
            <strong>Sign in </strong>
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-envelope fa-fw"></i>
              </span>
              <%= text_field_tag :email, params[:email], :placeholder => "Enter email", class: "form-control login-separation" %>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock fa-fw"></i></span>
              <%= password_field_tag :password, params[:password], :placeholder => "Enter password", class: "form-control login-separation" %>
            </div>
          </div>
          <%= submit_tag "Sign in", class: "btn btn-sm btn-success"%>
          <%= link_to "Sign up", signup_path%>
        </div>
      </div>
  </div>
<%end%>


