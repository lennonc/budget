<h3>Log in</h3>

<%= form_tag sessions_path do %>
  <table>
    <tr>
      <td>
        <%= label_tag :email %>
      </td>
      <td>
        <%= text_field_tag :email, params[:email] %>
      </td>
    </tr>

    <tr>
      <td>
        <%= label_tag :password %>
      </td>
      <td>
        <%= password_field_tag :password %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td class="submit-button">
        <%= submit_tag "Log In", :class => "btn btn-primary"%>
      </td>
    </tr>
  </table>
<%end%>