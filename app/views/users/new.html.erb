<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-error">
      <h5>You have errors</h5>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <%end%>
      </ul>
    </div>
  <%end%>

  <div class="login-box">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">
            <strong>Sign up</strong>
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label for="first_name">First Name</label>
            <td><%= f.text_field :first_name, class: "form-control"%></td>
          </div>
          <div class="form-group">
            <label for="first_name">Last Name</label>
            <td><%= f.text_field :last_name, class: "form-control"%></td>
          </div>
          <div class="form-group">
            <label for="first_name">Email</label>
            <td><%= f.text_field :email, class: "form-control"%></td>
          </div>
          <div class="form-group">
            <label for="first_name">Password</label>
            <td><%= f.password_field :password, class: "form-control"%></td>
          </div>
          <div class="form-group">
            <label for="first_name">Password Confirmation</label>
            <td><%= f.password_field :password_confirmation, class: "form-control"%></td>
          </div>
          <%= f.submit "Sign up", class: "btn btn-sm btn-success"%>
        </div>
      </div>
  </div>
<%end%>